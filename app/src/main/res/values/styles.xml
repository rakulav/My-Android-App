<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/greentheme</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="ProgressBar.White" parent="@style/AppTheme">
        <item name="colorPrimary">@color/bluetheme</item>
        <item name="colorAccent">@color/bluetheme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>
</resources>